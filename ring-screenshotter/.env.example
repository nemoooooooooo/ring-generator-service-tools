# Ring Screenshotter Service Configuration
# Copy to .env and customize

# Blender executable path (auto-detected if not set)
# RING_SS_BLENDER_EXECUTABLE=/usr/local/bin/blender

# Service
RING_SS_HOST=0.0.0.0
RING_SS_PORT=8103
RING_SS_LOG_LEVEL=INFO

# Render defaults
RING_SS_DEFAULT_RESOLUTION=1024
RING_SS_BLENDER_TIMEOUT_SECONDS=120

# Concurrency
RING_SS_MAX_CONCURRENT_JOBS=2
RING_SS_MAX_QUEUE_SIZE=64
RING_SS_SYNC_WAIT_TIMEOUT_SECONDS=180

# Optional API key auth
# RING_SS_API_KEY=your-secret-key
